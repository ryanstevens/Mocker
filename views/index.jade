                exports.routes = {
                    routes : {},
                    get : function(route, callback) {
                        this.routes[route] = callback;
                    },
                    serve: function(request, response, callback) {
                        _.each(this.routes, function(value, route) {
                            if (request.path.endsWith(route)) 
                                this.routes[route]();
                        }.bind(this));
                        if (callback) callback();
                    }
                };
                  
